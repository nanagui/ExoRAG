# Development Dockerfile without CUDA dependencies
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies (without CUDA-specific packages)
RUN pip install --no-cache-dir -r requirements.txt || \
    (echo "Installing without CUDA dependencies..." && \
     pip install --no-cache-dir \
     fastapi \
     uvicorn[standard] \
     pydantic \
     redis \
     qdrant-client \
     langchain \
     langchain-community \
     numpy \
     scikit-learn \
     pandas \
     matplotlib \
     astropy \
     lightkurve \
     python-jose[cryptography] \
     passlib[bcrypt] \
     python-multipart)

# Copy application code
COPY src/ .

# Create necessary directories
RUN mkdir -p /data /models /data/corpus /data/indexes

# Expose port
EXPOSE 8000

# Run the application
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]